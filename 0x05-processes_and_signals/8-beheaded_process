#!/usr/bin/env bash
# Find the process ID of 7-highlander
highlander_pid=$(pgrep -f "7-highlander")

# Check if the process ID was found
if [ -n "$highlander_pid" ]; then
        # Kill the process
        kill "$highlander_pid"
        
        # Check if the process is still running
        if pgrep -f "7-highlander" >/dev/null; then
            echo "OK"
        else
            echo "OK
./7-highlander is still running"
        fi
else
        echo "7-highlander process not found"
fi
